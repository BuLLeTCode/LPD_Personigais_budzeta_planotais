<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.raivis.develops.lpd_personigais_budzeta_planotais.MoneyFlowActivity">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/addOutcome"
        android:background="@mipmap/menu_button_5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="pressOnOutcome"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/addIncome"
        android:background="@mipmap/menu_button_6"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/addOutcome"
        android:layout_alignStart="@+id/addOutcome"
        android:onClick="pressOnIncome"/>

</RelativeLayout>
